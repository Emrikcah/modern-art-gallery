---
import Button from '../components/Button.astro';
import leftArrow from '/assets/icon-arrow-left.svg';

---


<section>
   
   <div id="map">
      <div  id="div">
         <Button text="Back to home" whereTo="/" img={leftArrow} altText="left arrow" order="2" />
      </div>
   </div>
   
</section>

   <style>

      section{
         position: relative;
      }

   #map{
      width: 100%;
      height: 550px;
   }

   #div{
      position: absolute;
      z-index: 1000;
      left: 16px;
   }

   @media(min-width: 700px){
      #div{
         left: 39px;
      }
   }
   @media(min-width: 1000px){
      #div{
         left: 165px;
      }
   }
   </style>



  
